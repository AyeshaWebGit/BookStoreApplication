
@model IEnumerable<BookModel>
@{
    ViewData["Title"] = "GetAllBooks";
}

<div class="container">
    <h3 class="display-4">GetAllBook list</h3>
    <div class="row">
        @foreach (var Book in Model)
        {
            <div class="col-md-4">
                <div class="card m-md-4 shadow-sm">
                    <img src="@Book.CoverImageUrl" class="img-thumbnail" style="height: 306px" />
                 
                   

                    <div class="card-body">
                        <h3 class="card-title">@Book.Title</h3>
                        <p class="card-text">@Book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/book/GetBook/@Book.Id" class="btn btn-sm btn-outline-secondary"> View Details</a>
                            </div>
                            <small class="text-muted">@Book.Author</small>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>


